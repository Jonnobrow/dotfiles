#!/bin/sh
case "${1%%:*}" in
	http|https)
		exec firefox "$1"
		;;
	*.pdf)
		exec zathura "$1"
		;;
	mailto)
		exec foot -T 'foot-float' sh -c "aerc \"$1\""
		;;
    *.py|*.md|*.go)
        exec foot sh -c "nvim \"$1\""
        ;;
	*)
		echo "Don't know how to open $@" >&2
        /usr/bin/xdg-open $@
		;;
esac
