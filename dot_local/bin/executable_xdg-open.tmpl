#!/bin/sh
case "${1%%:*}" in
	http|https)
		exec firefox "$1"
		;;
	*.pdf)
		exec zathura "$1"
		;;
    *.py|*.go)
        exec kitty sh -c "nvim \"$1\""
        ;;
    *.md)
        exec kitty glow -p $@
        ;;
    *.png|*.jpg|*.gif|*.jpeg)
        exec kitty +kitten icat $@
        ;;
	*)
		echo "Don't know how to open $@" >&2
        command -v /usr/bin/xdg-open && /usr/bin/xdg-open $@ || /usr/bin/open $@
		;;
esac
