{{ if (eq .chezmoi.os "linux") -}}
#!/usr/bin/env bash
set -euo pipefail

DIR="$HOME/.local/share/chezmoi"

sudo -v

sudo mkdir -pv /etc/mopidy /etc/xdg/reflector /etc/systemd/system/getty@tty1.service.d

sudo cp -v "$DIR/other/reflector.conf" /etc/xdg/reflector/reflector.conf

sudo cp -v "$DIR/other/getty@tty1-override.conf" \
    /etc/systemd/system/getty@tty1.service.d

{{ if (eq .chezmoi.osRelease.name "Arch Linux") -}}
sudo mkdir -pv /etc/pacman.d/hooks
chezmoi execute-template < $DIR/other/pkglist.hook.tmpl | sudo tee /etc/pacman.d/hooks/pkglist.hook
{{- end }}

{{- end }}
