
#!/usr/bin/env bash

set -x

declare -A color

color["focused"]="0xFF98931A"
color["normal"]="0xFFD79921"
color["preselect"]="0xFFD79921"

# ===== Loading Scripting Additions ============

# See: https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#macos-big-sur---automatically-load-scripting-addition-on-startup
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# ===== Tiling setting =========================

yabai -m config layout                      bsp

yabai -m config top_padding                 10
yabai -m config bottom_padding              50
yabai -m config left_padding                10
yabai -m config right_padding               10
yabai -m config window_gap                  10

yabai -m config mouse_follows_focus         on
yabai -m config focus_follows_mouse         autoraise

yabai -m config window_topmost              on
yabai -m config window_opacity              off
yabai -m config window_shadow               float

yabai -m config window_border               on
yabai -m config window_border_width         3
yabai -m config insert_feedback_color       "0xFFD79921"
yabai -m config normal_window_border_color  "0xFFD79931"
yabai -m config active_window_border_color  "0xFF98931A"

yabai -m config active_window_opacity       1.0
yabai -m config normal_window_opacity       1.0
yabai -m config split_ratio                 0.50

yabai -m config auto_balance                off

yabai -m config mouse_modifier              fn
yabai -m config mouse_action1               move
yabai -m config mouse_action2               resize


# ===== Spaces =================================
yabai -m space 1 --label "Editor"
yabai -m space 2 --label "Browser"
yabai -m space 3 --label "Comms"
yabai -m space 4 --label "Personal"

yabai -m rule --add app="Signal"                space=4
yabai -m rule --add app="BeagleIM"              space=4
yabai -m rule --add app="Microsoft Teams"       space=3
yabai -m rule --add app="Slack"                 space=3
yabai -m rule --add app="Microsoft Outlook"     space=3

# ===== Rules ==================================

yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="System Preferences" app="^System Preferences$" title=".*" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off
yabai -m rule --add label="KeePassXC" app="^KeePassXC$" manage=off
yabai -m rule --add label="KeePassXC" app="^KeePassXC$" sticky=on
yabai -m rule --add label="KeePassXC" app="^KeePassXC$" topmost=on
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off
yabai -m rule --add label="mpv" app="^mpv$" manage=off
yabai -m rule --add label="Software Update" title="Software Update" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add title="Microsoft Teams Notification" window_border=off
yabai -m rule --add title="Microsoft Teams Notification" manage=off
yabai -m rule --add app="Cisco AnyConnect Secure Mobility Client" manage=off
yabai -m rule --add app="Self Service" title="Jamf Self Service" manage=off
yabai -m rule --add app="BeagleIM" title="Preferences" manage=off
yabai -m rule --add app="Microsoft Teams" title="Loading Microsoft Teams" manage=off 
yabai -m rule --add app="Jabra Direct" manage=off 
yabai -m rule --add app="Firefox" title="Library" manage=off
yabai -m rule --add app="DEPNotify" manage=off


set +x
printf "yabai: configuration loaded...\\n"t
