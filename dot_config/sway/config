    floating enable, move position 1200 650, sticky enable
for_window [app_id="firefox" title="Sharing\ Indicator$"] \
    floating enable, no_focus, move position 0 0
for_window [app_id="firefox" title="^Library$"] \
    floating enable
for_window [app_id="firefox" title="^Page Info\ â€”\ *"] \
  resize set width 1800 550, floating enable
for_window [app_id="zoom"] \
  floating enable
for_window [app_id="zoom" title="^Zoom\ Meeting$"] \
  floating disable
for_window [title="sxiv" instance="Kunst"] \
  floating enable, move position 2140 1080, no_focus, sticky enable


