include "$HOME/.config/sway/colours"
include "$HOME/.config/sway/bindings"

output * bg $wallpaper fill

exec swayidle -w \
     timeout 300 $lock \
     timeout 600 'swaymsg "output * dpms off"' \
           resume 'swaymsg "output * dpms on"' \
     before-sleep $lock

input * {
    repeat_delay 180
    repeat_rate 30
    accel_profile flat
    pointer_accel 1
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout gb
    xkb_options caps:swapescape
}

input "1739:32402:DELL07EA:00_06CB:7E92_Touchpad" {
    tap enabled
}

# Autostart
exec --no-startup-id systemctl --user import-environment; systemctl --user start graphical-session.target
exec --no-startup-id /usr/bin/mako
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent

assign [app_id="keepassxc"] 3
       
client.focused              $color0 $background $foreground $color7 $color3
client.focused_inactive     $color0 $background $foreground $color7 #000000
client.unfocused            $color0 $background $foreground $color7 #000000
client.urgent               $color0 $background $foreground $color7 $color5

default_floating_border normal
default_border pixel
gaps {
    top 3
    bottom 30
    horizontal 20
}
     
bar {
    swaybar_command waybar
    id 1
}
