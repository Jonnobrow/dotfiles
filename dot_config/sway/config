include "$HOME/.config/sway/colours"
include "$HOME/.config/sway/bindings"

output * bg $wallpaper fill
output DP-3 pos 1080 150 res 2560x1440
output HDMI-A-1 pos 0 0 res 1920x1080 transform 270

exec swayidle -w \
     timeout 300 swaylock \
     timeout 600 'swaymsg "output * dpms off"' \
           resume 'swaymsg "output * dpms on"' \
     before-sleep swaylock

input * {
    repeat_delay 180
    repeat_rate 30
    accel_profile flat
    pointer_accel 1
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout gb
    xkb_options caps:swapescape
}

input "1739:32402:DELL07EA:00_06CB:7E92_Touchpad" {
    tap enabled
}

# Autostart
exec --no-startup-id /usr/bin/mako
exec --no-startup-id /usr/bin/wlsunset -T 5700 -t 3600 -l 51.5 -L -0.1 -g 0.7
exec /usr/bin/dino
exec /usr/bin/keepassxc
exec /usr/bin/nextcloud
exec /usr/bin/kunst


